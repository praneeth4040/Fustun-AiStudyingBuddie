{
  "manifest_version": 3,
  "name": "Fustun AI Assistant",
  "version": "1.0",
  "description": "An AI assistant powered by Gemini AI with web automation capabilities",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": "icons/icon.svg"
  },
  "side_panel": {
    "default_path": "src/ui/panel.html"
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.js"]
    }
  ],
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
} 